extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug 
include ../blocks/s-img/_s-img.pug 
include ../blocks/s-news/_s-news.pug 

block variables
	- let  mainPage= null
block title
	- let  title= 'Новость'
	title= title
block description 
	meta(name="description", content= "" )

block keywords
	meta(name="Keywords", content= "" )
block pagecontent 
	mixin menu()
		+e.UL.nav(itemscope itemtype="http://schema.org/SiteNavigationElement")
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Главная
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Технические возможности
			+e.LI.item.active( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Новости
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Редукторы и мультипликаторы
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Зубчатые передачи и&nbsp;комплектующие
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url").text-warning Импортозамещение
			+e.LI.item( itemprop="item" ): +e.A.link(href="#"  itemprop="url") Контакты 
	//- +header()
	+mob-mnu()
		+menu()
	+topLine()
	+top-nav
		+menu()
	mixin bread()
		.container
			nav(aria-label="breadcrumb" )
				ol.breadcrumb(itemscope itemtype="http://schema.org/BreadcrumbList")
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") Главная  
							meta(itemprop="position" )
							
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") Новости
							meta(itemprop="position" )

					li.breadcrumb-item( class="active" itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") 2016 год
							meta(itemprop="position" )
							
			nav(aria-label="breadcrumb" )
				ol.breadcrumb(itemscope itemtype="http://schema.org/BreadcrumbList").pt-1
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") 2020 год 
							meta(itemprop="position" )
							
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") 2019 год  
							meta(itemprop="position" )
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") 2018 год   
							meta(itemprop="position" )
					li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name")    2017 год 
							meta(itemprop="position" )

					li.breadcrumb-item( class="active" itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
						a(href='#' itemprop="item" )
							span( itemprop="name") 2016 год
							meta(itemprop="position" )
	+bread()
	
	+text()(class="text-block--inner")
		.container
			p.strong Поставка зубчатой передачи для турборедуктора (мультипликатора) Р-430 в составе газоперекачивающего агрегата ТКА-Ц-16/76 для ПАО «СИБУР Холдинг»
			p На основании проведенных замеров и изучения исходной документации на площадке Заказчика была разработана конструкторская документация, в соответствии с которой были изготовлены комплект зубчатой передачи (шестерня ведомая, шестерня ведущая) для редуктора М-430, имеющего следующие характеристики: подшипники скольжения (опорные и опорно-упорный), втулки зубчатые, обоймы, полумуфты). При изготовлении были использованы усовершенствованные NiCrMo марки сплавов, имеющие повышенные характеристики, с проведением термообработки поверхности зубьев – цементация (твердость 58-60 HRC).
