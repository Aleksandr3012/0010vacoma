extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug 
include ../blocks/s-img/_s-img.pug 

block variables
	- let  mainPage= null
block title
	- let  title= 'Турборедукторы: мультипликаторы — ООО Вакома РУС'
	title= title
	meta(name="description", content= "Проектирование и изготовление редукторной техники на основании конструкторской документации Заказчиком, а также по собственному инжинирингу" )

block keywords
	meta(name="Keywords", content= "турборедукторы, мультипликаторы, вакома, вакома рус, турборедукторы вакома, мультипликаторы вакома, турборекдуторы мультипликаторы вакома" )
block pagecontent 
	mixin menu()
		+e.UL.nav(itemscope itemtype="http://schema.org/SiteNavigationElement")
			+e.LI.item( itemprop="item" ): +e.A.link(href="index.html"  itemprop="url") 
				span Главная
			+e.LI.item( itemprop="item" ): +e.A.link(href="our-company.html"  itemprop="url") 
				span О компании
			+e.LI.item( itemprop="item" ): +e.A.link(href="tehnicheskie-vozmojnosti.html"  itemprop="url") 
				span Технические возможности
			+e.LI.item.dropdown.active( itemprop="item" ): +e.link 
				span Редукторы и&nbsp;мультипликаторы
				+b.UL.drop
					+e.LI.item
						+e.A.link(href="tyajelonagrujennie-reduktori.html" itemprop="url") Тяжелонагруженные редукторы
					+e.LI.item
						+e.A.link(href="turboreduktori.html" itemprop="url") Мультипликаторы (турборедукторы)
			+e.LI.item( itemprop="item" ): +e.A.link(href="zubchatie-peredachi.html"  itemprop="url") 
				span Зубчатые передачи и&nbsp;комплектующие
			+e.LI.item( itemprop="item" ): +e.A.link.text-warning(href="importozameshenie.html"  itemprop="url")
				span Импортозамещение
			+e.LI.item( itemprop="item" ): +e.A.link(href="kontakti.html"  itemprop="url") 
				span Контакты


	//- +header()
	+mob-mnu()
		+menu()
	+topLine()
	+top-nav
		+menu()
	.container
		nav(aria-label="breadcrumb" )
			ol.breadcrumb(itemscope itemtype="http://schema.org/BreadcrumbList")
				li.breadcrumb-item(  itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
					a(href='index.html' itemprop="item" )
						span( itemprop="name") Главная 
						meta(itemprop="position" )
				li.breadcrumb-item( class="active" itemprop="itemListElement" itemscope  itemtype="http://schema.org/ListItem")
					a(href='#' itemprop="item" )
						span( itemprop="name") Турборедукторы (мультипликаторы)
						meta(itemprop="position" )
	+text()(class="text-block--gearboxes")
		.container
			h1.h2.text-center Турборедукторы (мультипликаторы)
			p Мы&nbsp;разрабатываем различные типы для применения в&nbsp;составе основного технологического оборудования предприятий различных областей промышленности.
			p Предлагаемые к&nbsp;поставке турборедукторы (мультипликаторы) могут быть полным аналогом турборедукторов, эксплуатирующихся Заказчиком, а&nbsp;также специально разработанной моделью (адаптивное решение) с&nbsp;учетом возможности установки новой машины на&nbsp;существующие фундаменты, с&nbsp;полным сохранением всех основных присоединительных размеров.
			p Корпуса турборедукторов (мультипликаторов)&nbsp;&mdash; крутильно-жесткие, недеформируемые, сварной конструкции (рассчитаны в&nbsp;соответствии с&nbsp;МКЭ);
			p Зубчатые передачи&nbsp;&mdash; подвержены высокоточной обработке, закалены, цементовано-шлифованы и&nbsp;динамически отбалансированы. При изготовлении зубчатых передач используются улучшенные марки NiCrMo-сплавов.
			p Подшипники, устанавливаемые в&nbsp;турборедукторы (мультипликаторы) нашей конструкции,&nbsp;&mdash; от&nbsp;ведущих мировых производителей (MAIN METALL, MORDACCI и&nbsp;др.).
			p Системы смазки рассчитываются индивидуально для каждого типа редуктора.
			p Функционально важные места снабжены контрольно-измерительными приборами с&nbsp;цифровыми датчиками сигналов производства фирм Bently Nevada, JUMO серии&nbsp;Pt либо других производителей по&nbsp;согласованию с&nbsp;Заказчиком
			p Турборедукторы (мультипликаторы) ВАКОМА успешно применяются в&nbsp;составе следующего технологического оборудования:
			ul
				li Газотурбинные установки (ГТУ, ГТТ);
				li Газоперекачивающие агрегаты (ГПА);
				li Компрессорное оборудование (центробежные компрессоры, дожимные компрессорные установки и&nbsp;турбодетандеры);
				li Нагнетатели, воздуходувки и&nbsp;пр.
	+s-img-mlp
	+footer()