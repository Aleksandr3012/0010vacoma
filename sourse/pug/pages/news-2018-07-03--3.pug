extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug 
include ../blocks/s-img/_s-img.pug 
include ../blocks/s-news/_s-news.pug 

block variables
	- let  mainPage= null
block title
	- let  title= 'Новость'
	title= title
block description 
	meta(name="description", content= "Проектирование и изготовление редукторной техники на основании конструкторской документации Заказчиком, а также по собственному инжинирингу" )

block keywords
	meta(name="Keywords", content= "вакома, вакома магитогорск, вакома рус, vakoma, проектирование редукторной техники, изготовление редуктора, проектирование редуктора, проектирование валов редуктора, проектирование одноступенчатого редуктора, проектирование планетарного редуктора, проектирование редуктора, проектирование цилиндрического редуктора, проектирование червячного редуктора" )
block pagecontent 
	mixin menu()
		+e.UL.nav(itemscope itemtype="http://schema.org/SiteNavigationElement")
			+e.LI.item( itemprop="item" ): +e.A.link(href="index.html"  itemprop="url") 
				span Главная
			+e.LI.item( itemprop="item" ): +e.A.link(href="our-company.html"  itemprop="url") 
				span О компании
			+e.LI.item( itemprop="item" ): +e.A.link(href="tehnicheskie-vozmojnosti.html"  itemprop="url") 
				span Технические возможности
			+e.LI.item.dropdown( itemprop="item" ): +e.link 
				span Редукторы и&nbsp;мультипликаторы
				+b.UL.drop
					+e.LI.item
						+e.A.link(href="tyajelonagrujennie-reduktori.html" itemprop="url") Тяжелонагруженные редукторы
					+e.LI.item
						+e.A.link(href="turboreduktori.html" itemprop="url") Мультипликаторы (турборедукторы)
			+e.LI.item( itemprop="item" ): +e.A.link(href="zubchatie-peredachi.html"  itemprop="url") 
				span Зубчатые передачи и&nbsp;комплектующие
			+e.LI.item( itemprop="item" ): +e.A.link.text-warning(href="importozameshenie.html"  itemprop="url")
				span Импортозамещение
			+e.LI.item( itemprop="item" ): +e.A.link(href="kontakti.html"  itemprop="url") 
				span Контакты
	//- +header()
	+mob-mnu()
		+menu()
	+topLine()
	+top-nav
		+menu()

	+bread()
	
	+text()(class="text-block--inner")
		.container
			h1.strong Комплект подшипников скольжения для мульнипликатора TA-71B (импортозамещение KINGSBURY, США) для ПАО &laquo;СИБУР Холдинг&raquo;
			p Для реализации проекта по&nbsp;изготовлению комплектующих мультипликатора RENK TA-71В по&nbsp;программе импортозамещению был изготовлен комплект подшипников (опорные подшипники, упорный подшипник) взамен оригинальных подшипников (KINGSBURY, США).
			p Подшипники были изготовлены на&nbsp;основании конструкторской документации, разработанной специалистами нашей компании.
	//- +s-img-news-2016-08-11
	+s-img-news-body()
		+slidImg('img/@2x/2018-07-03-3-news-01.jpg', 'img/@2x/2018-07-03-3-news-xl-01.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-02.jpg', 'img/@2x/2018-07-03-3-news-xl-02.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-03.jpg', 'img/@2x/2018-07-03-3-news-xl-03.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-04.jpg', 'img/@2x/2018-07-03-3-news-xl-04.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-05.jpg', 'img/@2x/2018-07-03-3-news-xl-05.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-06.jpg', 'img/@2x/2018-07-03-3-news-xl-06.jpg') 
		+slidImg('img/@2x/2018-07-03-3-news-07.jpg', 'img/@2x/2018-07-03-3-news-xl-07.jpg') 
	 
		//- +slidImg('img/@2x/news_item_20160811_02.jpg', 'img/@2x/news_item_20160811_02x.jpg', 'шестерня ведущая')
	.container
		.strong Технические характеристики:
		.table-wrap
			table
				tr( style="background-color:#16437c; color: #fff").text-center
					th Параметр
					th Подшипник опорный
					th Подшипник опорный
					th Подшипник упорный
			 
				mixin tr(t1, t2, t3, t4)
					tr.bg-light
						td= t1
						td( ).text-center= t2
						td( ).text-center= t3
						td( ).text-center= t4
				+tr("Масса, кг",'40,8','62','19,37')
				+tr("Наружный диаметр, мм",'300 ± 0,016','360 ± 0,018','279,4 К6')
				+tr("Внутренний диаметр, мм",'220 + 0,046','280 + 0,052','133,35')
				+tr("Ширина, мм",'190','210','74')
	.pb-5
		+bread()
	+footer()