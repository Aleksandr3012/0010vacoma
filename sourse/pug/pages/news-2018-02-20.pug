	.container
		.strong Технические характеристики:
		.table-wrap
			table
				tr( style="background-color:#16437c; color: #fff").text-center
					th Параметр
					th  Редуктор MK001B05 <br> (аналог G5C)
					th  Редуктор MK002B07 <br> (аналог   G7CA)
				mixin tr(t1, t2,t3)
					tr.bg-light
						td= t1
						td( ).text-center= t2
						td( ).text-center= t3
				+tr('Мощность, кВт','11','15')
				+tr('Передаточное отношение   редуктора,  и','1:5,091','1:7,333')
				+tr('Номинальное число оборотов привода мин-1','1 450','1 450')
				+tr('Частота вращения выходного вала мин-1','284','198')
				+tr('Масса редуктора, кг','125','170')
			 
	
	.pb-5
		+bread()
	+footer()