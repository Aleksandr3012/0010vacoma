		+slidImg('img/@2x/2018-02-20-news-03.jpg', 'img/@2x/2018-02-20-news-xl-03.jpg')
		+slidImg('img/@2x/2018-02-20-news-04.jpg', 'img/@2x/2018-02-20-news-xl-04.jpg')
		+slidImg('img/@2x/2018-02-20-news-05.jpg', 'img/@2x/2018-02-20-news-xl-05.jpg')
		+slidImg('img/@2x/2018-02-20-news-06.jpg', 'img/@2x/2018-02-20-news-xl-06.jpg')
		+slidImg('img/@2x/2018-02-20-news-07.jpg', 'img/@2x/2018-02-20-news-xl-07.jpg')
